{
	"name": "",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"prepare": "npx htmx-router & npx prisma generate --sql",
		"docker": "docker compose up -d",
		"setup": "prisma generate --sql && prisma migrate deploy && prisma db seed",
		"dev": "node ./server.js",
		"build": "run-s build:*",
