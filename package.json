		"cbor2": "^1.4.0",
		"chalk": "^5.3.0",
		"htmx-router": "^2.0.1",
		"hx-stream": "^0.1.1",
		"is-ip": "^5.0.1",
		"isbot": "^4.1.0",
		"lru-cache": "^11.0.2",
		"morgan": "^1.10.0",
		"niceware": "^4.0.0",
		"nodemailer": "^6.9.16",
		"prisma": "^6.9.0",
		"prisma-json-types-generator": "^3.4.2",
